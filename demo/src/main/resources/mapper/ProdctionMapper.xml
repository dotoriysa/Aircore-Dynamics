<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.ProductionMapper">

    <select id="selectAllProductionRecords" resultType="com.example.demo.model.ProductionData">
        <![CDATA[
        SELECT
            id,
            timestamp,
            pm_id,
            completed_quantity,
            quality_grade
        FROM
            production_data
        WHERE
            pm_id = #{pmId}
        ORDER BY
            timestamp ASC
        ]]>
    </select>

</mapper>