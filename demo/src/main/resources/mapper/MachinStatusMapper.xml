<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.MachineStatusMapper">

    <select id="selectLatestMachineStatus" resultType="com.example.demo.model.MachineStatusData">
        <![CDATA[
        SELECT
            id,
            timestamp,
            pm_id,
            status
        FROM
            machine_status_data
        WHERE
            pm_id = #{pmId}
        ORDER BY
            timestamp DESC
        LIMIT 1
        ]]>
    </select>

    <select id="selectAllMachineStatusRecords" resultType="com.example.demo.model.MachineStatusData">
        <![CDATA[
    SELECT
        timestamp,
        status
    FROM
        machine_status_data
    WHERE
        pm_id = #{pmId}
        AND DATE(timestamp) = CURDATE()
    ORDER BY
        timestamp ASC
    ]]>
    </select>

</mapper>